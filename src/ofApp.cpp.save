void ofApp::setupCV()
{
    // Setup Custom openCV Class
    openCV.setup(CAM_WIDTH,CAM_HEIGHT,FRAMERATE);
    
    // Its a Mystery
    openCV.relearnBackground();
    
    // Sets the internal Tracking boundaries at 40px from each boundary
    openCV.setTrackingBoundaries(40, 40);
}
