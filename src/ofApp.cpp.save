    triggerDreamTimer = false;
    progress = 0;
    playbackMode = 0;
    howmanyrecordings = 0;
    whichBufferAreWePlaying = 0;
    hasBeenPushedFlag = true;
    learnBackground = true;
    canSaveGif = false;
